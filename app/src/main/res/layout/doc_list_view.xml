<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:layout_margin="10dp"
    android:clickable="true"
    android:elevation="10dp"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardBackgroundColor="@color/cardBack"
    app:cardCornerRadius="5dp"
    app:cardElevation="6dp"
    app:cardMaxElevation="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:padding="@dimen/icon_padding"
            android:src="@drawable/ic_doc"/>

        <RelativeLayout
            android:layout_width="270dp"
            android:layout_height="match_parent"
            android:layout_margin="10dp">

            <TextView
                android:id="@+id/doc_text_view_title"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:ellipsize="end"
                android:fontFamily="@font/mvboli"
                android:maxLines="1"
                android:text="Document"
                android:textColor="#000"
                android:textSize="@dimen/main_text_size"/>

            <TextView
                android:id="@+id/doc_text_view_path"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/doc_text_view_title"
                android:ellipsize="end"
                android:maxLines="1"
                android:padding="2dp"
                android:text="Lorem aodfijkadflnkladfnlkdaf"
                android:textSize="@dimen/primary_text_size" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/doc_text_view_title">

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="@null"
                    android:clickable="true"
                    android:src="@drawable/ic_share"/>

            </RelativeLayout>

        </RelativeLayout>

        <ImageView
            android:id="@+id/doc_image_view_lock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="@dimen/icon_padding"
            android:scaleType="fitXY"
            android:src="@drawable/ic_lock"
            android:visibility="visible"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>