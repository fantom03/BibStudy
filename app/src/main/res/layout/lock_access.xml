<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@drawable/lock_access_background"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/lock_access_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/question_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:fontFamily="@font/mvboli"
            android:padding="5dp"
            android:text="Question"
            android:textColor="@color/colorAccent"
            android:textSize="25sp"/>

        <RadioGroup
            android:id="@+id/option_radio_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical"
            android:padding="5dp">

            <RadioButton
                android:id="@+id/ans_btn1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/mvboli"
                android:text="Option 1"
                android:textColor="@color/colorAccent"
                android:textSize="18sp"/>

            <RadioButton
                android:id="@+id/ans_btn2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/mvboli"
                android:text="Option 1"
                android:textColor="@color/colorAccent"
                android:textSize="18sp"/>
            <RadioButton
                android:id="@+id/ans_btn3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/mvboli"
                android:text="Option 1"
                android:textColor="@color/colorAccent"
                android:textSize="18sp"/>
            <RadioButton
                android:id="@+id/ans_btn4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/mvboli"
                android:text="Option 1"
                android:textColor="@color/colorAccent"
                android:textSize="18sp"/>
        </RadioGroup>

    </LinearLayout>

    <Button
        android:id="@+id/ans_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Submit"/>

</LinearLayout>