<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_margin="10dp"
    android:clickable="true"
    android:elevation="10dp"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardBackgroundColor="@color/cardBack"
    app:cardCornerRadius="5dp"
    app:cardElevation="6dp"
    app:cardMaxElevation="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="@dimen/icon_padding"
            android:src="@drawable/ic_folder"/>

        <TextView
            android:id="@+id/class_text_view"
            android:layout_width="280dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/icon_padding"
            android:fontFamily="@font/mvboli"
            android:gravity="fill"
            android:padding="@dimen/icon_padding"
            android:text="Class: Name of The Class"
            android:textColor="#000"
            android:textSize="@dimen/main_text_size" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="@dimen/icon_padding"
            android:scaleType="fitXY"
            android:src="@drawable/ic_goto"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>